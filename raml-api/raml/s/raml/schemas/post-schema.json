{
  "required": true,
  "$schema": "http://json-schema.org/draft-extends/schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "required": false
    },
    "createTime": {
      "type": "string",
      "required": false
    },
    "status": {
      "type": "string",
      "required": false
    },
    "content": {
      "type": "object",
      "$ref": "content"
    },
    "poster": {
      "type": "object",
      "$ref": "poster"
    },
    "topic": {
      "type": "object",
      "$ref": "topic"
    },
    "comments": {
      "type": "array",
      "items": {
        "$ref": "comment"
      }
    },
    "likes": {
      "type": "array",
      "$ref": "like"
    }
  }
}
